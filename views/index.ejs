<%- include('./partials/header') %>

    <% if(error.length>0){ %>
        <div
            class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 w-full max-w-xs text-center">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
            <% if(success.length>0){ %>
                <div
                    class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 w-full max-w-xs text-center">
                    <span class="inline-block mt-1 mb-1 text-white">
                        <%= success %>
                    </span>
                </div>
                <% } %>
                    <div class="w-full h-screen flex items-center justify-center px-4 sm:px-6 md:px-8 lg:px-10">
                        <% if(!toggle) { %>
                            <div class="w-full max-w-md flex items-center justify-center">
                                <div class="w-full px-4 py-6 bg-white shadow-md rounded-md">
                                    <h3 class="text-4xl md:text-4xl">Welcome to <span
                                            class="text-blue-500 font-semibold">Scatch</span>
                                    </h3>
                                    <h4 class="text-xl md:text-2xl mb-4">create your account</h4>
                                    <form autocomplete="off" action="/users/register" method="post"
                                        class="flex flex-col">
                                        <input
                                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                            type="text" placeholder="Full Name" name="fullname">
                                        <input
                                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                            type="email" placeholder="Email" name="email">
                                        <input
                                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                            type="password" placeholder="Password" name="password">
                                        <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                                            value="Create My Account">
                                        <a href="/?toggle=true" class="mt-3 text-blue-500 hover:underline">Already have
                                            an account?</a>
                                    </form>
                                </div>
                            </div>
                            <% }else{ %>
                                <div class="w-full max-w-md flex items-center justify-center">
                                    <div class="w-full px-4 py-6 bg-white shadow-md rounded-md">
                                        <h3 class="text-3xl md:text-4xl">welcome to <span
                                                class="text-blue-500 font-semibold">Scatch</span>
                                        </h3>
                                        <h4 class="text-xl md:text-2xl capitalize mb-4">login to your account</h4>
                                        <form autocomplete="off" action="/users/login" method="post"
                                            class="flex flex-col">
                                            <input
                                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                                type="email" placeholder="Email" name="email">
                                            <input
                                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                                type="password" placeholder="Password" name="password">
                                            <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white"
                                                type="submit" value="Login">
                                            <a href="/?toggle=false" class="mt-3 text-blue-500 hover:underline">Create a
                                                new account</a>
                                        </form>
                                    </div>
                                </div>
                                <% } %>
                    </div>
                    <%- include('./partials/footer') %>